<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>SuperMarket Groupe3</display-name>

	<servlet>
		<servlet-name>supermarket</servlet-name>
		<jsp-file>/jsp/index.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>GestionProduit</servlet-name>
		<jsp-file>/jsp/gestionProduit.jsp</jsp-file>
	</servlet>
	<servlet>
		<servlet-name>ListePaniers</servlet-name>
		<jsp-file>/jsp/listePaniers.jsp</jsp-file>
	</servlet>


	<servlet>
		<servlet-name>ServletDispatcher</servlet-name>
		<display-name>ServletDispatcher</display-name>
		<description>Contr√¥leur central de l'ensemble des servlets de
			l'application</description>
		<servlet-class>fr.miage.supermarket.controlers.ServletDispatcher</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AjouterProduit</servlet-name>
		<display-name>AjouterProduit</display-name>
		<description>Servlet de traitement d'ajout d'un produit</description>
		<servlet-class>fr.miage.supermarket.controlers.AjouterProduit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServletDispatcher</servlet-name>
		<url-pattern>/central</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>supermarket</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AjouterProduit</servlet-name>
		<url-pattern>/ajouterProduit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GestionProduit</servlet-name>
		<url-pattern>/gestionProduit</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListePaniers</servlet-name>
		<url-pattern>/listePaniers</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>supermarket</welcome-file>
	</welcome-file-list>
</web-app>
